<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoxShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item> <!-- Marge autour de la vue -->
        <item name="android:elevation">3dp</item> <!-- Élévation (définit l'ombre) -->
        <item name="android:background">@color/white</item> <!-- Couleur de fond de la vue -->
        <item name="android:outlineProvider">background</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:radius">8dp</item>
    </style>

</resources>