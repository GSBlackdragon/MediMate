<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenue_sur_medi_mate"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/medimatemate"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/string_conditions"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/button_create_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.62" />

    <CheckBox
        android:id="@+id/checkBoxCGU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_create_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.40" />

    <TextView
        android:id="@+id/intervalle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jaccepte_les"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxCGU"
        app:layout_constraintStart_toEndOf="@+id/checkBoxCGU"
        app:layout_constraintTop_toTopOf="@+id/checkBoxCGU" />

    <TextView
        android:id="@+id/textCGU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conditions_generales_dutilisation"
        android:textColor="@color/clickable_blue"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxCGU"
        app:layout_constraintStart_toEndOf="@+id/intervalle_title"
        app:layout_constraintTop_toTopOf="@+id/checkBoxCGU" />

    <CheckBox
        android:id="@+id/checkBoxPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_create_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jaccepte_la"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxPC"
        app:layout_constraintStart_toEndOf="@+id/checkBoxPC"
        app:layout_constraintTop_toTopOf="@+id/checkBoxPC" />

    <TextView
        android:id="@+id/textPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/politique_de_confidentialite"
        android:textColor="@color/clickable_blue"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxPC"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/checkBoxPC" />

    <Button
        android:id="@+id/button_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creer_mon_compte"
        android:textAllCaps="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        style="@style/CustomButtonStyleDisable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.90" />


</androidx.constraintlayout.widget.ConstraintLayout>