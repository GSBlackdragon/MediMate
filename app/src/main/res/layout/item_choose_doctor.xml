<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Nom"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tv_doctor_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Prénom"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_doctor_name"
        app:layout_constraintTop_toTopOf="@+id/tv_doctor_name" />

    <TextView
        android:id="@+id/tv_doctor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spécialité"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_doctor_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_doctor_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_doctor_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_doctor_title"
        app:layout_constraintVertical_bias="0.45" />

    <CheckBox
        android:id="@+id/checkbox_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/tv_doctor_firstname"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>